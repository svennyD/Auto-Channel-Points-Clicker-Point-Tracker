{
    "name": "Auto Channel Points Grabber",
    "version": "1.0.0",
    "manifest_version": 2,
    "content_scripts": [
      {
        "matches": ["https://*.twitch.tv/*"],
        "js": ["restore_points.js","points_upd.js","grabLoot.js","title_text.js"]
      }
    ],
    "background": {
      "scripts": ["event_onInstalled.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "Twitch Channel Points Grabber",
      "default_icon": "main_icon.png",
      "default_popup": "popup.html"
    },
    "permissions": ["tabs","storage","activeTab","https://*.twitch.tv/*"]
  }